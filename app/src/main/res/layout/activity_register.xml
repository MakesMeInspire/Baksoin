<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Register"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="25dp"
            android:paddingBottom="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textExtraLarge"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/nunito"
                android:text="@string/register_greet"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textMedium"
                android:fontFamily="@font/nunito"
                android:text="@string/register_subgreet"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <!-- Nama Lengkap -->
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:text="@string/register_name"
                    android:textSize="@dimen/textSmall" />

                <EditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rounded"
                    android:ems="10"
                    android:fontFamily="@font/nunito"
                    android:hint="@string/register_namehint"
                    android:inputType="textVisiblePassword"
                    android:padding="15dp"
                    android:textSize="@dimen/textMedium">

                    <requestFocus />
                </EditText>
            </LinearLayout>
            <!-- Email -->
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:text="@string/register_email"
                    android:textSize="@dimen/textSmall" />

                <EditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rounded"
                    android:ems="10"
                    android:fontFamily="@font/nunito"
                    android:inputType="textEmailAddress"
                    android:padding="15dp"
                    android:textSize="@dimen/textMedium" />
            </LinearLayout>
            <!-- Email Konfirmasi -->
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:text="@string/register_emailconfirm"
                    android:textSize="@dimen/textSmall" />

                <EditText
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rounded"
                    android:ems="10"
                    android:fontFamily="@font/nunito"
                    android:inputType="textEmailAddress"
                    android:padding="15dp"
                    android:textSize="@dimen/textMedium" />
            </LinearLayout>
            <!-- Username -->
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:text="@string/register_password"
                    android:textSize="@dimen/textSmall" />

                <EditText
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rounded"
                    android:ems="10"
                    android:fontFamily="@font/nunito"
                    android:inputType="textVisiblePassword"
                    android:padding="15dp"
                    android:textSize="@dimen/textMedium" />
            </LinearLayout>
            <!-- Password -->
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:text="@string/register_emailconfirm"
                    android:textSize="@dimen/textSmall" />

                <EditText
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rounded"
                    android:ems="10"
                    android:fontFamily="@font/nunito"
                    android:inputType="textEmailAddress"
                    android:padding="15dp"
                    android:textSize="@dimen/textMedium" />
            </LinearLayout>
            <!-- Aggrement -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSmall"
                    android:fontFamily="@font/nunito"
                    android:text="@string/register_required"/>
                <TextView
                    android:layout_marginStart="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSmall"
                    android:fontFamily="@font/nunito"
                    android:text="@string/register_aggrement"
                    android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>
            <!-- Button Register -->
            <android.support.v7.widget.CardView
                android:layout_margin="5dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="@dimen/rounded_button">
                <TextView
                    android:background="@drawable/button_rounded"
                    android:padding="15dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/nunito"
                    android:text="@string/register_button"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textMedium"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <!-- Has Account -->
        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="@string/register_account"
                android:textSize="@dimen/textMedium"
                android:fontFamily="@font/nunito"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="@string/register_login"
                android:textSize="@dimen/textMedium"
                android:fontFamily="@font/nunito"
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>